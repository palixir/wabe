{
    "name": "wabe-pluralize",
    "version": "0.0.1",
    "license": "MIT",
    "main": "src/index.ts",
    "description": "Package to pluralize a word in english",
    "scripts": {
        "build": "bun --filter wabe-build build:package $(pwd)",
        "check": "tsc --project $(pwd)/tsconfig.json",
        "ci":"bun lint && bun test",
        "lint": "biome lint $(pwd)/src/*.ts --config-path=../../ --no-errors-on-unmatched",
        "format": "biome format --write . --config-path=../../"
    },
    "devDependencies": {
        "@types/bun": "latest"
    }
}
